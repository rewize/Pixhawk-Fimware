#include <iostream>

class Rocket {
private:
    double velocity;    // ì†ë„ (m/s)
    double acceleration; // ê°€ì†ë„ (m/s^2)
    double fuel;       // ë‚¨ì•„ìžˆëŠ” ì—°ë£ŒëŸ‰ (kg)
    bool parachuteDeployed; // ë‚™í•˜ì‚°ì´ ì „ê°œë˜ì—ˆëŠ”ì§€ ì—¬ë¶€

public:
    // ìƒì„±ìž
    Rocket(double initialFuel) : velocity(100), acceleration(-9.81), fuel(initialFuel), parachuteDeployed(false) {}

    // ì—°ë£Œ ì†Œëª¨ ì‹œë®¬ë ˆì´ì…˜
    void burnFuel() {
        if (fuel > 0) {
            fuel -= 1; // ì—°ë£Œ 1kg ì†Œëª¨
        }
    }

    // ë‚™í•˜ì‚° ì‚¬ì¶œ ì¡°ê±´ ê²€ì‚¬
    void checkParachuteDeployment() {
        if (velocity == 0 && acceleration == -9.81 && fuel <= 0) {
            deployParachute();
        }
    }

    // ë‚™í•˜ì‚° ì‚¬ì¶œ í•¨ìˆ˜
    void deployParachute() {
        if (!parachuteDeployed) {
            parachuteDeployed = true;
            std::cout << "ðŸª‚ ë‚™í•˜ì‚° ì „ê°œ ì™„ë£Œ!" << std::endl;
        }
    }

    // ìƒíƒœ ì—…ë°ì´íŠ¸ ë° ì¶œë ¥
    void updateStatus() {
        burnFuel();
        if (fuel <= 0) velocity = 0; // ì—°ë£Œê°€ ì—†ìœ¼ë©´ ì†ë„ 0
        checkParachuteDeployment();

        std::cout << "ì†ë„: " << velocity << " m/s, ê°€ì†ë„: " << acceleration 
                  << " m/s^2, ë‚¨ì€ ì—°ë£Œ: " << fuel << " kg, ë‚™í•˜ì‚° ì „ê°œ: " 
                  << (parachuteDeployed ? "Yes" : "No") << std::endl;
    }
};

// ë©”ì¸ í•¨ìˆ˜
int main() {
    Rocket rocket(5); // ì´ˆê¸° ì—°ë£Œ 5kg ì„¤ì •

    while (true) {
        rocket.updateStatus();
        if (rocket.checkParachuteDeployment()) break;
    }

    return 0;
}
